{
  "name": "taskweave-backend",
  "version": "1.0.0",
  "description": "TaskWeave Backend API - Universal AI Task Continuity System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "ai",
    "task-management",
    "chatgpt",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/websocket": "^8.3.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.29.1",
    "fastify": "^4.25.1",
    "ioredis": "^5.3.2",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "pino-pretty": "^13.1.2",
    "socket.io": "^4.6.0",
    "tiktoken": "^1.0.10",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
